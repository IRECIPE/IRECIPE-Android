<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IRecipe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>
    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bottom_sheet</item>
    </style>

    <style name="Theme.IRecipe" parent="Base.Theme.IRecipe">
        <item name="colorPrimary">@color/color_main</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_1</item>
        <item name="colorControlActivated">@color/color_main</item>
    </style>

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.IRecipe</item>
    </style>
</resources>