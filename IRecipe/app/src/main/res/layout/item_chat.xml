<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/view_right_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_sendbox"
        android:padding="8dp"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_right_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxWidth="300dp"
            android:textSize="17dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_left_chat_final"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_chat_profile" />
            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="아이(Chat Bot)"
                android:textColor="@color/color_main"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_left_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_chat_receivebox"
            android:layout_marginTop="7dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_dot_loading"
                android:visibility="gone"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lottie_dot_loading"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <TextView
                android:id="@+id/tv_left_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>