<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.community.PostFragment">


    <ScrollView
        android:id="@+id/sv_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="@string/com_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:background="@null"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv_img_profile"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_base_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/com_name"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/iv_img_profile"
                app:layout_constraintTop_toTopOf="@id/iv_img_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_img_profile"
                android:layout_marginStart="12dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_follow"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/com_follow"
                android:textSize="12sp"
                android:textColor="@color/gray_1"
                android:background="@drawable/btn_radius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_img_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_img_profile"
                android:layout_marginEnd="20dp"/>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                app:layout_constraintTop_toBottomOf="@id/iv_img_profile"
                android:layout_marginTop="6dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_food_type"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/com_foodType"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_level"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/com_level"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius_green"
                app:layout_constraintStart_toEndOf="@id/btn_food_type"
                app:layout_constraintTop_toTopOf="@id/btn_food_type"
                android:layout_marginStart="10dp"/>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                app:layout_constraintTop_toBottomOf="@id/btn_food_type"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3"
                android:layout_marginTop="14dp">
                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_item_post"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="@string/com_text"
                android:textSize="11sp"
                android:background="@null"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_image"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:gravity="top|start"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/ll_btns"/>

    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_heart_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_count"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_star_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_count"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_comment_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_count"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>