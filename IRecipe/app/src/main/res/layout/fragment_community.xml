<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_com_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="8dp"
        android:hint="@string/com_hint"
        android:background="@drawable/bg_button_search"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:paddingEnd="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_sort_btn"/>
    <ImageView
        android:id="@+id/iv_com_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_com_search"
        app:layout_constraintBottom_toBottomOf="@id/et_com_search"
        app:layout_constraintTop_toTopOf="@id/et_com_search"/>

    <LinearLayout
        android:id="@+id/ll_sort_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_com_search"
        app:layout_constraintBottom_toTopOf="@id/rv_post">

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingHorizontal="12dp"
            android:text="@string/com_sort_basic"
            android:textStyle="bold"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_rounded_hard"
            app:drawableEndCompat="@drawable/ic_bottom_arrow_white" />

        <ImageView
            android:id="@+id/iv_type_search"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="200dp"
            android:src="@drawable/bg_search_type"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sort_btn"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:id="@+id/ll_write_post"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_rounded_hard"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_post_write"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_makePost"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>