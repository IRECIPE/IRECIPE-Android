<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="8dp"
        android:hint="@string/com_hint"
        android:background="@drawable/bg_button_search"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:paddingEnd="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintTop_toTopOf="@id/et_search"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_food_type"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/btn_arrow_down"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:text="요리 종류"
        android:drawablePadding="8dp"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="10dp"
        android:id="@+id/btn_level"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/btn_arrow_down"
        android:paddingRight="10dp"
        android:drawablePadding="8dp"
        android:paddingStart="10dp"
        android:text="난이도"
        android:textSize="13sp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_to

    <Button
        android:id="@+id/btn_make_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        android:backgroundTint="@color/color_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_post_write"/>
</androidx.constraintlayout.widget.ConstraintLayout>