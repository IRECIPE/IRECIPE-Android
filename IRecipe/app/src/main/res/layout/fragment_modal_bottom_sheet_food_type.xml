<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:background="@drawable/modal_bottom_sheet">

    <TextView
        android:id="@+id/food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_foodType"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_korean"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_korean"
        app:layout_constraintTop_toBottomOf="@id/food_type"
        app:layout_constraintStart_toStartOf="@id/food_type"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chinese"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_chinese"
        app:layout_constraintTop_toBottomOf="@id/food_type"
        app:layout_constraintStart_toEndOf="@id/btn_korean"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_japanese"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_japanese"
        app:layout_constraintTop_toBottomOf="@id/food_type"
        app:layout_constraintStart_toEndOf="@id/btn_chinese"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_western"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_western"
        app:layout_constraintTop_toBottomOf="@id/food_type"
        app:layout_constraintStart_toEndOf="@id/btn_japanese"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_unusual"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_unusual"
        app:layout_constraintTop_toBottomOf="@id/btn_korean"
        app:layout_constraintStart_toStartOf="@id/food_type"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simple"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_simple"
        app:layout_constraintTop_toBottomOf="@id/btn_korean"
        app:layout_constraintStart_toEndOf="@id/btn_unusual"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_high"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="@string/modal_high"
        app:layout_constraintTop_toBottomOf="@id/btn_korean"
        app:layout_constraintStart_toEndOf="@id/btn_simple"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/btn_community_post_select_color"
        android:background="@drawable/btn_community_post_select"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_food_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modal_complete"
        app:layout_constraintTop_toBottomOf="@id/btn_unusual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/color_main"
        android:background="@drawable/btn_radrectangle_green"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>