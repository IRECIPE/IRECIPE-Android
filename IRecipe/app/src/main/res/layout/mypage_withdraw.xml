<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mypage_alert"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_mypage_alert"
    android:padding="20dp">
    <TextView
        android:id="@+id/tv_main_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:minHeight="50dp"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="정말 탈퇴하시겠어요?" />

    <TextView
        android:id="@+id/tv_alert"
        android:layout_width="177dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:textSize="15dp"
        tools:text=" 탈퇴 버튼 선택 시, 계정은 삭제되어 복구되지 않습니다." />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_withdraw"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_button_rounded_gray"
            android:text="탈퇴"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_rounded"
            android:text="취소"

            />

    </LinearLayout>

</LinearLayout>