<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.community.MakePostFragment">

    <LinearLayout
        android:id="@+id/ll_makePost_btns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_food_type"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/btn_arrow_down"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:text="@string/com_foodType"
            android:drawablePadding="8dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"
            android:textColor="@color/btn_community_post_select_color"
            android:background="@drawable/btn_community_post_select" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_level"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/btn_arrow_down"
            android:paddingRight="12dp"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:text="@string/com_level"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/btn_community_post_select_color"
            android:background="@drawable/btn_community_post_select" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_img"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/btn_arrow_down"
            android:paddingRight="12dp"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:text="@string/com_addImg"
            android:textSize="13sp"
            android:textColor="@color/btn_community_post_select_color"
            android:background="@drawable/btn_community_post_select" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toBottomOf="@id/ll_makePost_btns"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="@string/com_title"
        android:maxLength="20"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/gray_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="9dp"
        android:layout_marginStart="20dp"
        android:background="@null"/>


    <TextView
        android:id="@+id/tv_title_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_cntLimit"
        android:textSize="11sp"
        android:textColor="@color/gray_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"/>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:layout_marginTop="9dp"/>

    <EditText
        android:id="@+id/et_subtitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="@string/com_subtitle"
        android:textSize="13sp"
        android:maxLength="50"
        android:textColor="@color/gray_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_marginTop="9dp"
        android:layout_marginStart="20dp"
        android:background="@null"/>
    <TextView
        android:id="@+id/tv_subtitle_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_cntLimit2"
        android:textSize="11sp"
        android:textColor="@color/gray_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"/>
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toBottomOf="@id/et_subtitle"
        android:layout_marginTop="9dp"/>

    <EditText
        android:id="@+id/et_text"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="@string/com_postHint"
        android:textSize="11sp"
        android:background="@null"
        android:textColor="@color/gray_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:layout_marginTop="11dp"
        android:layout_marginStart="20dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="10dp"
        android:gravity="top|start"/>


<!--    <ImageButton-->
<!--        android:id="@+id/btn_add_img"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/btn_img"-->
<!--        android:background="@null"-->
<!--        android:layout_marginStart="18dp"-->
<!--        android:layout_marginBottom="2dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/btn_font"-->
<!--        app:layout_constraintStart_toStartOf="parent"/>-->
<!--   -->

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/btn_save"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_saveDraft"
        android:textSize="13sp"
        android:textColor="@color/gray_1"
        android:background="@drawable/btn_radrectangle"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@id/btn_post"
        app:layout_constraintBottom_toBottomOf="@id/btn_post"/>
    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_save"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_radrectangle_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>